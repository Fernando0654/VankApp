{{#if success_msg}}
  <script>
    swal("Éxito", "{{success_msg}}", "success", { button: "Continuar"});
  </script>
{{/if}}

{{#if error_msg}}
  <script>
    swal("Error", "{{error_msg}}", "error", { button: "Continuar"});
  </script>
{{/if}}

{{#if info_msg}}
  <script>
    swal("Info", `{{info_msg}}`, "info", {
      buttons: ["Atrás", "Imprimir"],
      className: "info-modal"
      });
  </script>
{{/if}}